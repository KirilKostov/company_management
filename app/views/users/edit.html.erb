<h1>
  Update your profile
</h1>

<%= form_for @user do |f| %>

  <%= f.label :name, "Name" %><br/>
  <%= f.text_field :name %><br/>

  <br/>

  <%= f.label :surname, "Surname" %><br/>
  <%= f.text_field :surname %><br/>

  <br/>

  <%= f.label :email, "Email" %><br/>
  <%= f.text_field :email %><br/>

  <br/>

  <%= f.label :password, "Password" %><br/>
  <%= f.text_field :password %><br/>

  <br/>
  
  <%= f.submit :update, { value: "Update user" } %>
  <%= button_to("Cancel", users_path) %>
<% end %>