<p>
  <h3>
    <%= @article.title %>
  </h3>  
</p>

<p>
  <%= @article.text %>
</p>

<% if logged_in? %>

  <%= form_for [@article, @comment] do |f| %>

    <%= @comment.errors[:comment].first %>
    <%= f.label :comment, "Comment:" %><br/>
    <%= f.text_field :comment %><br/>

    <br/>

    <%= f.submit :create, { value: "Add comment" } %>
  <% end %>
<% else %>
<% end %>

<br/><br/>

<table border ="1" cellspacing ="0">

  <tr>
    <td>
      Comments
    </td>
     <td>
      created by
    </td>
     <td>
      created_at
    </td>
     <td>
      updated_at
    </td>
  </tr>

<% @comments.each do |c| %>

  <tr>
    <td>
      <%= c.comment %>
    </td>
     <td>
      <%= "#{c.user.name} #{c.user.surname}" %>
    </td>
     <td>
      <%= c.created_at %>
    </td>
     <td>
      <%= c.updated_at %>
    </td>
  </tr> 

<% end %> 

</table>

<br/>

<%= link_to("back", articles_path)%>